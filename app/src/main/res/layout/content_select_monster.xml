<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_select_monster"
        tools:context=".activities.SelectMonsterActivity">

    <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <RadioButton
                android:button="@null"
                android:background="@drawable/dinosaur_selector"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/dinosaur_selector"/>

        <RadioButton
                android:button="@null"
                android:background="@drawable/comet_selector"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/comet_selector"/>

        <RadioButton
                android:button="@null"
                android:background="@drawable/zombie_selector"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="dinosaur_selector"
                android:id="@+id/zombie_selector"/>

        <RadioButton
                android:button="@null"
                android:background="@drawable/chupacabra_selector"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/chupacabra_selector"/>

    </RadioGroup>

</android.support.constraint.ConstraintLayout>